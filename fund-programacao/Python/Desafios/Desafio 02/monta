class Avaliacoes():
    def __init__(self, pint, aval):
        self.__pinturas = pint
        self.__avaliacao = aval
        '''self.__usario = usuario
        self.__opiniao = opini'''

    @property
    def pictures(self):
        for i in self.__pinturas:
            print('Pintor da obra: ' + i)
            print(self.__pinturas[i])
        return self.__pinturas
    
    @property
    def assessments(self):
        return self.__avaliacao
    
    @assessments.setter
    def assessments(self, new_usuario, new_opiniao):
        self.__assessments.update({new_usuario: new_opiniao})
        return self.__avaliacao



